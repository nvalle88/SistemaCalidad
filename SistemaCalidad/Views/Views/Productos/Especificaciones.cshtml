@model SistemaCalidad.Models.BussinessViewModels.ProductoEspecificacionViewModel

<div class="row">
    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-9 margin-top-0">
        <h1 class="page-title text-align-center txt-color-blueDark">
            <b> Detalle de las especificaciones</b>
        </h1>
    </div>
    <div class="col-xs-12 col-sm-5 col-md-5 col-lg-3 margin-top-0">
        <ul id="sparks">
            <li class="sparks-info">
                <a class="btn btn-primary" onclick="cargando()" asp-action="Index"><i class="fa fa-arrow-left"></i> Regresar </a>
            </li>
        </ul>
    </div>

    <div class="col-sm-7 margin-top-0">
        <div class="well no-padding">
            <form asp-action="Especificaciones" method="post" novalidate="novalidate" class="smart-form client-form">
                <header>
                    @ViewData["accion"] Adicionar especificaciones
                </header>
                <input type="hidden" asp-for="ProductoId" />
                <fieldset>
                    <section>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    </section>
                    <div class="col-lg-12">
                        <section class="col col-lg-12">
                            <label class="label">Clase</label>
                            <div class="form-group">
                                <div class="input">
                                    <select asp-for="EspecificacionId" class="form-control select2" asp-items="ViewBag.IdEspecificacion"></select>
                                    <span asp-validation-for="EspecificacionId" class="text-danger"></span>
                                </div>
                            </div>
                        </section>
                    </div>
                    <section class="col col-6">
                        <label class="label">Rango m&iacute;nimo</label>
                        <label class="input">
                            <i class="icon-append fa fa-pencil-square-o"></i>
                            <input type="text" asp-for="RangoMinimo" placeholder="Rango mínimo">
                            <b class="tooltip tooltip-bottom-right">Ingrese el rango mínimo</b>
                            <span asp-validation-for="RangoMinimo" class="text-danger"></span>
                        </label>
                    </section>
                    <section class="col col-6">
                        <label class="label">Rango m&aacute;ximo</label>
                        <label class="input">
                            <i class="icon-append fa fa-pencil-square-o"></i>
                            <input type="text" asp-for="RangoMaximo" placeholder="Rango máximo">
                            <b class="tooltip tooltip-bottom-right">Ingrese el rango máximo</b>
                            <span asp-validation-for="RangoMaximo" class="text-danger"></span>
                        </label>
                    </section>

                </fieldset>
                <footer>
                    <button type="submit" id="btn-guardar" class="btn btn-primary">
                        Guardar
                    </button>
                </footer>
            </form>

        </div>
    </div>
    <div class="col-sm-5 margin-top-0">
        <div class="well col-sm-12 no-padding">
            <div class="col col-sm-12">
                
                <div class="col-sm-12 margin-bottom-10 margin-top-10 product-content product-wrap clearfix">
                    <legend>Producto seleccionado</legend>
                    <div class="product-deatil col col-lg-12 text-align-left JustifyFull">

                        <h4 class="name">
                            <b>
                                <a href="#" id="descripcionproducto">
                                    @Model.Producto.DescripcionProducto
                                </a>
                            </b>
                        </h4>
                        <h5 class="name">
                            <a href="#" id="observacionproducto">
                                @Model.Producto.ObservacionProducto
                            </a>
                        </h5>
                    </div>
                    <br />
                    <div class="col col-lg-12 text-align-center">
                        <p class="price-container col-lg-4 margin-top-10 margin-bottom-10">
                            <span>Clasificaci&oacute;n:</span>
                            <br />
                            <span id="clasificacionproducto"> @Model.Producto.ClaseProducto.ClaseDescripcion</span>
                        </p>
                        <p class="price-container col-lg-4 margin-top-10 margin-bottom-10">
                            <span>Grado:</span><br />
                            <span id="gradoproducto"> @Model.Producto.Grado</span>
                        </p>

                        <p class="price-container col-lg-4 margin-top-10 margin-bottom-10">
                            <span>Di&aacute;metro:</span>
                            <br />
                            <span id="diametroproducto"> @Model.Producto.Nominal</span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        </div>

        <div class="col-sm-12">
            <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-deletebutton="false" data-widget-collapsed="false" data-widget-colorbutton="false" data-widget-editbutton="false">
                <header>
                    <span class="widget-icon">
                        <i class="fa fa-table"></i>
                    </span>
                    <h2>Listado de especificaciones </h2>

                </header>
                <div>
                    <div class="jarviswidget-editbox">
                    </div>
                    <div class="widget-body no-padding">
                        <table id="dt_basic" data-page-length="10" class="table table-striped table-bordered table-hover" width="100%">
                            <thead>
                                <tr>
                                    <th data-hide="phone" style="text-align:center">Especificaci&oacute;n</th>
                                    <th data-hide="phone" style="text-align:center"> Valor esperado</th>
                                    <th data-hide="phone" style="text-align:center"> M&iacute;nimo</th>
                                    <th data-hide="phone" style="text-align:center"> M&aacute;ximo</th>
                                    <th style="text-align:center">Opciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ProductoEspecificacion)
                                {
                                    <tr>
                                        <td>
                                            <p class="JustifyFull">@item.Especificacion.Descripcion</p>
                                        </td>

                                        <td>
                                            <p class="JustifyFull">@item.ValorEsperado</p>
                                        </td>
                                        <td>
                                            <p class="JustifyFull">@item.RangoMinimo</p>
                                        </td>
                                        <td>
                                            <p class="JustifyFull">@item.RangoMaximo</p>
                                        </td>
                                        <td>
                                            @*@Html.ActionLink("Editar", "EditarEspecificacion", new { id = item.ProductoEspecificacionId }, new { onclick = "cargando();" }) <br />*@
                                            @Html.ActionLink("Eliminar", "DeleteEspecificacion", new { id = item.ProductoEspecificacionId }, new { onclick = "return confirm('Desea eliminar el registro... ?');" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                    <!-- end widget content -->

                </div>
                <!-- end widget div -->

            </div>
        </div>
    </div>


<!-- /.modal -->
